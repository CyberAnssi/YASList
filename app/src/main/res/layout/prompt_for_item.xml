<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textfield_item_name"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:layout_marginTop="76dp"
        android:hint="New Item Name"
        android:maxLength="30"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_create_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Create item"
        app:layout_constraintEnd_toEndOf="@+id/textfield_item_name"
        app:layout_constraintTop_toBottomOf="@+id/textfield_item_name" />

    <Button
        android:id="@+id/button_cancel_item_creation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Cancel, go back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textfield_quantity"
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="number"
        android:maxLength="4"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@+id/textfield_item_name"
        app:layout_constraintTop_toBottomOf="@+id/textfield_item_name" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="178dp"
        android:layout_height="390dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/textfield_quantity"
        app:layout_constraintTop_toBottomOf="@+id/textfield_quantity">

        <RadioButton
            android:id="@+id/radioButton_x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="x" />

        <RadioButton
            android:id="@+id/radioButton_kg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kilogram" />

        <RadioButton
            android:id="@+id/radioButton_g"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="gram" />

        <RadioButton
            android:id="@+id/radioButton_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="liter" />

        <RadioButton
            android:id="@+id/radioButton_ml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="milliliter" />

        <RadioButton
            android:id="@+id/radioButton_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="meter" />

        <RadioButton
            android:id="@+id/radioButton_cm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="centimeter" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>